# 集群配置文件示例
# 将此文件复制为 .clusters.yaml 并填写实际配置

clusters:
  # 集群名称（作为唯一标识）
  示例集群:
    name: "示例集群"
    namespace: "default"
    ssh_config:
      hostname: "192.168.1.100"
      username: "root"
      # 密码支持两种格式:
      # 1. 明文（第一次运行时会自动加密）
      password: "your_password"
      # 2. 加密后的密文（以ENC:开头）
      # password: "ENC:gAAAAABm..."
      port: 22
  
  # 可以添加多个集群
  # 另一个集群:
  #   name: "另一个集群"
  #   namespace: "production"
  #   ssh_config:
  #     hostname: "192.168.1.101"
  #     username: "admin"
  #     password: "your_password"
  #     port: 22

# 加密说明:
# - 密码会在保存时自动加密
# - 加密密钥存储在 .crypto.key 文件中
# - 请妥善保管密钥文件，丢失后无法解密
# - 手动加密现有配置: python encrypt_config.py
# - 查看解密后的配置: python encrypt_config.py show
